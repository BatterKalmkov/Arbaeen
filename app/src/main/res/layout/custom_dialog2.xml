            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/azadlogo"/>
        <com.example.jonathan.arbaeen.style.FontTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="دانشگاه آزاد اسلامی واحد کرمانشاه"
            android:layout_marginRight="10dp"
            android:textColor="@color/colorPrimary"
            style="@style/Base.TextAppearance.AppCompat.Body1"
            android:gravity="center"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/ict"/>
        <com.example.jonathan.arbaeen.style.FontTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="اداره کل فناوری اطلاعات و ارتباطات استان کرمانشاه"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/colorPrimary"
            style="@style/Base.TextAppearance.AppCompat.Body1"
            android:gravity="center"
            />
