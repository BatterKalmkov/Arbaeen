<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/rekatbg"
    android:layout_height="match_parent"
    tools:context="com.example.jonathan.arbaeen.RekatActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <com.example.jonathan.arbaeen.style.FontTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#054a3c"
        style="@style/Base.TextAppearance.AppCompat.Large"
        android:text="شماره رکعت"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="70dp"
        android:weightSum="4"
        android:layout_gravity="center"
        android:background="@drawable/rekat1"
        android:orientation="horizontal"
        android:layout_height="70dp">
    <com.example.jonathan.arbaeen.style.FontTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/rekat_reknum"
        style="@style/Base.TextAppearance.AppCompat.Display1"
        android:text="1"/>
    </LinearLayout>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.example.jonathan.arbaeen.style.FontTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#054a3c"
                style="@style/Base.TextAppearance.AppCompat.Large"
                android:text="شماره سجده"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="50dp"
                android:id="@+id/rekat_minus"
                android:src="@drawable/rekatdash"
                android:layout_height="50dp"/>
            <com.example.jonathan.arbaeen.style.FontTextView
                android:background="@drawable/rekat2"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/rekat_sejnum"
                style="@style/Base.TextAppearance.AppCompat.Display1"
                android:text="0"/>
            <ImageView
                android:layout_width="50dp"
                android:id="@+id/rekat_plus"
                android:src="@drawable/rekatplus"
                android:layout_height="50dp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rekat_reset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"

        android:theme="@style/ThemeOverlay.MyDarkButton"
        android:gravity="center"
        android:padding="5dp">

            <com.example.jonathan.arbaeen.style.FontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape9"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="از نو"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:textStyle="bold"/>

    </LinearLayout>

</LinearLayout>
