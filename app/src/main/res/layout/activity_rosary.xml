<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/rekatbg"
    android:layout_height="match_parent"
    tools:context="com.example.jonathan.arbaeen.RosaryActivity">
    <com.example.jonathan.arbaeen.style.FontTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#054a3c"
        style="@style/Base.TextAppearance.AppCompat.Large"
        android:text="تعداد صلوات"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/rosary_minus"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/rekatdash"/>

        <com.example.jonathan.arbaeen.style.FontTextView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/rekat1"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/rosary_num"
            style="@style/Base.TextAppearance.AppCompat.Large"
            android:text="0"/>
        <ImageView
            android:layout_width="50dp"
            android:id="@+id/rosary_plus"
            android:src="@drawable/rekatplus"
            android:layout_height="50dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rosary_reset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"

        android:theme="@style/ThemeOverlay.MyDarkButton"
        android:gravity="center"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <com.example.jonathan.arbaeen.style.FontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape9"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:text="از نو"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:textStyle="bold"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
